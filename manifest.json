{
  "manifest_version": 2,
  "name": "Tuleap latest version",
  "description": "Get tuleap's latest version",
  "version": "1.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  
  "icons": {
    "16":  "img/tuleap-16.png",
    "32":  "img/tuleap-32.png",
    "48":  "img/tuleap-48.png",
    "128": "img/tuleap-128.png"
  },
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "browser_action": {
   "default_icon": "img/tuleap-16.png",
   "default_popup": "popup.html"
  },
   
  "web_accessible_resources": [
   "lib/style.css",
   "lib/popup.js",
   "lib/options.js",
   "img/tuleap-16.png",
   "img/tuleap-32.png",
   "img/tuleap-48.png",
   "img/tuleap-128.png",
   "img/loading.gif",
   "img/tuleap_min.png",
   "popup.html"
  ]
}